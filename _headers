 /*
  Security & Privacy Baseline (statics)
 */
*
  Strict-Transport-Security: max-age=31536000; includeSubDomains
  Content-Security-Policy: default-src 'self'; img-src 'self' data: https:; font-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' https://js.stripe.com; connect-src 'self' https://api.stripe.com https://q.stripe.com https://errors.stripe.com; frame-src https://js.stripe.com; frame-ancestors 'none'
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=()
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY

# Previews de Pages: no indexar
https://:project.pages.dev/*
  X-Robots-Tag: noindex

https://:version.:project.pages.dev/*
  X-Robots-Tag: noindex

# Cache static assets with hash-based filenames for 1 year
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache images for 1 month
*.jpg
  Cache-Control: public, max-age=2592000

*.png
  Cache-Control: public, max-age=2592000

*.svg
  Cache-Control: public, max-age=2592000

*.webp
  Cache-Control: public, max-age=2592000

# Cache CSS and JS files for 1 year (they have hashes)
*.css
  Cache-Control: public, max-age=31536000, immutable

*.js
  Cache-Control: public, max-age=31536000, immutable

# No cache for HTML files to ensure fresh content
*.html
  Cache-Control: no-cache, no-store, must-revalidate

# Short cache for root HTML
/
  Cache-Control: public, max-age=300